{
    "name": "avelon-network/avelon-network",
    "type": "craft-plugin",
    "license": "mit",
    "support": {
        "email": "hello@avelonetwork.com",
        "issues": "https://github.com/git@github.com:avelonnetwork/craftplugin.git/issues?state=open",
        "source": "https://github.com/git@github.com:avelonnetwork/craftplugin.git"
    },
    "require": {
        "php": ">=8.0",
        "craftcms/cms": "^4.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "avelonnetwork\\craftavelon\\": "src/"
        }
    },
    "extra": {
        "handle": "avelon",
        "name": "Avelon Network",
        "developer": "Avelon Network"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
