{% extends "_layouts/cp.twig" %}
{% import '_includes/forms.twig' as forms %}

{% if not currentUser.admin %}
	{% exit 403 %}
{% endif %}


{% set title = "Avelon Network"|t('plugin-handle') %}
{% set fullPageForm = true %}

{% block content %}

	{{ actionInput('avelon/settings/save-settings') }}
    {{ redirectInput('avelon/settings/get-settings') }}

	{{ forms.textField({
		label: 'Account ID',
		instructions: 'The ID of the account',
		id: 'accountId',
		name: 'accountId',
		value: settings.accountId ?? null,
		required: true
	}) }}

	{{ forms.textField({
		label: 'Bearer Token',
		instructions: 'The Bearer Token',
		id: 'bearerToken',
		name: 'bearerToken',
		value: settings.bearerToken ?? null,
		required: true
	}) }}

{% endblock %}
